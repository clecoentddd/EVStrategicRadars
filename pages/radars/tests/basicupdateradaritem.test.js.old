    expect(fetchedItem.name).toBe("New Name"); // Ensure the name was updated to the new value

  } catch (err) {
    // Catch any errors and log them
    console.error('Error occurred:', err); 
    throw err; // Re-throw the error for Jest to handle
  }
},20000);
